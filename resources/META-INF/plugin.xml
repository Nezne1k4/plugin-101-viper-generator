<idea-plugin>
    <id>com.plugin101.demo.vipergenerator</id>
    <name>VIPEnoR Template Classes Generator</name>
    <version>1.0803.1755</version>
    <vendor email="anh.tran@whatever.com" url="http://www.whatever.com">Whatever</vendor>

    <description><![CDATA[VIPEnoR makes life easier, but it takes time.
    We have nothing but time :)
    ]]></description>

    <change-notes><![CDATA[Try to make it run for demo.
    Run! Please run!
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="173.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <group id="genClassProject" text="Generate VIPEnoR" popup="true">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
            <action id="classGenerator"
                    class="com.plugin101.vipergenerator.action.ClassGenerateAction"
                    text="Source code"
                    description="UI for generating class."/>
            <action id="testGenerator"
                    class="com.plugin101.vipergenerator.action.ClassTestGenerateAction"
                    text="Unit test"
                    description="UI for generating class."/>
        </group>
    </actions>

</idea-plugin>